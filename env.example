# Cosva IoT Environment Variables
# Copy this file to .env and update the values
# Note: Farm configuration (FARM_ID, FARM_NAME) is now defined in config.yml

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1884
MQTT_USERNAME=sensor_service
MQTT_PASSWORD=sensor123
MQTT_CLIENT_ID=cosva-iot-client
MQTT_PORT=1884
MQTT_WS_PORT=8083

# Database Configuration (PostgreSQL only)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=cosva_iot
DB_USERNAME=cosva_user
DB_PASSWORD=cosva_password
DATABASE_URL="postgresql://cosva_user:cosva_password@localhost:5433/cosva_iot?schema=public"

# External API Configuration
API_BASE_URL=https://api.cosva.com
API_KEY=your-api-key-here
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Presence Detection Configuration
PRESENCE_TIMEOUT=30
DEBOUNCE_SECONDS=2

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=cosva_redis_password

# Service Ports
DASHBOARD_SERVICE_PORT=3000

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=INFO

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Development
NODE_ENV=development

# Config
CONFIG_FILE=config.yml